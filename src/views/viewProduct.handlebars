<main id = "main" class="container mt-5">
    <div class="row d-flex d-flex justify-content-between">
        
        {{#each products}}
            <div class="card col-3 m-2 border border-4" >
            {{!-- //<img src="{{thumbnail}}" class="img-fluid" alt=""> --}}
            <div class="card-body">
                <h5 class="card-title text-center">{{this.title}}</h5>
                <p class="card-text text-center mb-0">{{this.description}}</p>
                <p class="card-text text-center">cod: {{this.code}}</p>
                <h2 class="card-text text-center ">$ {{this.price}}</h2>
                <p class="card-text text-center ">Cantidad: {{this.stock}}</p>
                <div class="d-flex justify-content-center"> 
                <button type="button" class="btn btn-primary">Agregar</button> 
             </div>
            </div>
            </div>
            {{/each}}
    </div>
</main>
<nav class="container d-flex justify-content-center" aria-label="Page navigation example">
  
  <ul class="pagination">
   {{#if prev}}
      <button type="button" class="btn btn-lg btn-primary" id="prev"  >&laquo;</button>
   {{else}}
       <button type="button" class="btn btn-lg btn-primary" disabled="true">&laquo;</button>
    {{/if}}   
    
        <li class="page-item m-2"><a class="page-link" >{{this.page}}</a></li>
      
   {{#if next}}
     <button type="button" class="btn btn-lg btn-primary" id="next">&raquo;</button>
  
   {{else}}
       <button type="button" class="btn btn-lg btn-primary"  disabled="true">&raquo;</button>
   {{/if}}   
     



  </ul>
   
</nav>
